# ContractShield AI Backend - 生产环境配置模板

# 数据库配置
POSTGRES_DB=contractshield
POSTGRES_USER=contractshield
POSTGRES_PASSWORD=contractshield123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# 数据库连接URL
DATABASE_URL=postgresql://contractshield:contractshield123@postgres:5432/contractshield

# API配置
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# OpenRouter AI API配置 (必须设置)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# 文件上传配置
MAX_FILE_SIZE=50MB
UPLOAD_DIR=/app/uploads
TEMP_DIR=/app/temp

# 安全配置
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Redis配置 (可选，用于缓存)
REDIS_URL=redis://redis:6379/0

# 向量数据库配置
VECTOR_DIMENSION=1536
VECTOR_INDEX_LISTS=100