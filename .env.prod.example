# 生产环境配置文件
# 复制此文件为 .env.prod 并填入实际值

# GitHub 仓库信息
GITHUB_REPOSITORY=your-username/mvp-contractshield-ai-backend
IMAGE_TAG=latest

# 数据库配置
DATABASE_URL=postgresql://contractshield:your_secure_password@db:5432/contractshield
POSTGRES_DB=contractshield
POSTGRES_USER=contractshield
POSTGRES_PASSWORD=your_secure_password

# Redis 配置
REDIS_PASSWORD=your_redis_password

# API 密钥
OPENROUTER_API_KEY=your_openrouter_api_key

# 应用配置
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=False
LOG_LEVEL=info

# 文件上传配置
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=50000000

# Tesseract 配置
TESSERACT_CMD=/usr/bin/tesseract

# 安全配置
SECRET_KEY=your_very_secure_secret_key_here_at_least_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 监控配置
GRAFANA_PASSWORD=your_grafana_admin_password

# 域名配置
DOMAIN=your-domain.com
SSL_EMAIL=your-email@domain.com

# 备份配置
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key
BACKUP_S3_REGION=us-east-1

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@your-domain.com

# 日志配置
LOG_LEVEL=info
LOG_DIR=/app/logs

# 性能配置
WORKERS=4
MAX_CONNECTIONS=1000
KEEP_ALIVE=2

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000